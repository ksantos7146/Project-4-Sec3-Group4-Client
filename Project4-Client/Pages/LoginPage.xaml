<Page x:Class="Project4_Client.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF5F7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,10">
            <Image Source="C:\Users\karlx\OneDrive\Desktop\tests during math class lol\Project-4-Sec3-Group4-Client\Project4-Client\Resources\logo.png" Width="400" Height="400"/>
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Welcome Back 💖" FontSize="26" FontWeight="Bold" Foreground="#FF4081" Margin="0,10,0,20" TextAlignment="Center"/>

            <TextBlock Text="Username" Margin="0,5,0,0"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Padding="10"/>

            <TextBlock Text="Password" Margin="0,5,0,0"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Padding="10"/>

            <Button Content="Login" Background="#FF4081" Foreground="White" Margin="0,20,0,10" Padding="10" Click="Login_Click"/>

            <TextBlock Text="Don't have an account?" HorizontalAlignment="Center"/>
            <Button Content="Register" Background="Transparent" Foreground="#FF4081" Click="GoToRegister_Click"/>
        </StackPanel>
    </Grid>
</Page>
